<?xml version="1.0" encoding="utf-8"?>
<odoo>
<record id="view_ai_budget_chat_wizard_form" model="ir.ui.view">
    <field name="name">ai.budget.chat.wizard.form</field>
    <field name="model">ai.budget.chat.wizard</field>
    <field name="arch" type="xml">
        <form string="Chatbot Budgétaire">
            <sheet>
                <group>
                    <field name="question"/>
                </group>
                <footer>
                    <button name="action_ask" type="object" string="Demander à l’IA" class="btn-primary"/>
                </footer>
                <separator string="Réponse"/>
                    <group>
                        <field name="answer"/>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <record id="action_ai_budget_chat_wizard" model="ir.actions.act_window">
        <field name="name">Chatbot Budgétaire</field>
        <field name="res_model">ai.budget.chat.wizard</field>
        <field name="view_mode">form</field>
        <field name="target">new</field>
    </record>
    <menuitem action="action_ai_budget_chat_wizard" id="menu_ai_budget_bot_root" name="Outils IA" parent="om_account_budget.menu_budget_reports" sequence="40" />



    <record id="action_ai_budget_chat" model="ir.actions.client">
    <field name="name">Assistant Budgétaire</field>
    <field name="tag">ai_budget_chat</field>
</record>
    <menuitem id="menu_ai_budget_chat"
          name="Assistant Budgétaire"
          parent="om_account_budget.menu_budget_reports"
          action="action_ai_budget_chat"
          sequence="40"/>

</odoo>