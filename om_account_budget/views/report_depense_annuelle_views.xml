<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <!-- Wizard Form View -->
    <record id="view_report_depense_annuelle_wizard_form" model="ir.ui.view">
        <field name="name">report.depense.annuelle.wizard.form</field>
        <field name="model">report.depense.annuelle</field>
        <field name="arch" type="xml">
            <form string="Dépenses Annuelles">
                <group>
                    <field name="start_year"/>
                    <field name="end_year"/>
                </group>
                <footer>
                    <button name="generate_report" string="Générer Rapport" type="object" class="btn-primary"/>
                    <button string="Annuler" class="btn-secondary" special="cancel"/>
                </footer>
            </form>
        </field>
    </record>

    <!-- Wizard Action -->
    <record id="action_report_depense_annuelle_wizard" model="ir.actions.act_window">
        <field name="name">Dépenses Annuelles</field>
        <field name="res_model">report.depense.annuelle</field>
        <field name="view_mode">form</field>
        <field name="target">new</field>
    </record>

    <!-- Menu Items -->
    <menuitem id="menu_report_depense_annuelle_root" name="Rapports Dépenses" parent="account.menu_finance" sequence="30" />
    <menuitem id="menu_report_depense_annuelle" name="Dépenses Annuelles" parent="menu_budget_reports" action="action_report_depense_annuelle_wizard" sequence="10"/>

    <!-- Result Tree View -->
    <record id="view_report_depense_annuelle_result_tree" model="ir.ui.view">
        <field name="name">report.depense.annuelle.result.tree</field>
        <field name="model">report.depense.annuelle.result</field>
        <field name="arch" type="xml">
            <tree string="Résultats Dépenses Annuelles">
                <field name="annee"/>
                <field name="type_depense"/>
                <field name="montant_real"/>
                <field name="pourcentage_realisation"/>
            </tree>
        </field>
    </record>

    <!-- Result Pivot View -->
    <record id="view_report_depense_annuelle_result_pivot" model="ir.ui.view">
        <field name="name">report.depense.annuelle.result.pivot</field>
        <field name="model">report.depense.annuelle.result</field>
        <field name="arch" type="xml">
            <pivot string="Rapport Dépenses Annuelles"
                   js_class="web_pivot_hide_total">
                <field name="annee" type="row"/>
                <field name="type_depense" type="col"/>
                <field name="montant_real" type="measure"/>
                <field name="pourcentage_realisation" type="measure"/>
            </pivot>
        </field>
    </record>




</odoo>
