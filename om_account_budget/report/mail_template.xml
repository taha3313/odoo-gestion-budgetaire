<?xml version="1.0" ?>
<odoo>
    <data noupdate="1">
        <!--Email template -->
        <record id="notification_mail_template" model="mail.template">
            <field name="name">Notification: Envoyé par email</field>
            <field name="model_id" ref="om_account_budget.model_crossovered_budget"/>
            <field name="email_from">${user.email_formatted |safe}</field>
            <field name="email_to">${object.user_id.login}</field>
            <field name="subject">Notification(Ref ${object.name})</field>
            <field name="body_html" type="html">
                <div style="margin: 0px; padding: 0px;">
                    <p style="margin: 0px; padding: 0px; font-size: 13px;">
                        Bonjour,
                        <br/>
                        <br/>
                        Vous avez un budget à confirmer
                        <br/>
                        <br/>
                        Cordialement,
                        <br/>
                        <br/>
                        ${user.email_formatted |safe}
                    </p>
                </div>
            </field>

        </record>
    </data>
</odoo>